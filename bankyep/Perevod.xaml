<Window x:Class="bankyep.Perevod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bankyep"
        mc:Ignorable="d"
        Title="Perevod" Height="316.2" Width="423.2" FontFamily="Segoe UI Symbol" FontSize="16">
    <Grid Margin="0,0,-0.2,39">
        <Canvas Margin="0,0,0,-41.8" Height="290" VerticalAlignment="Top">
            <Label Content="Введите имя получателя" Canvas.Left="5" Canvas.Top="40" Height="30" FontSize="14" Width="180" FontWeight="Bold"/>
            <Label Content="Сумма перевода" Canvas.Left="10" Canvas.Top="110" Width="170" Height="30" FontWeight="Bold"/>
            <Button x:Name="Accept" Content="Перевести" Canvas.Left="105" Canvas.Top="190" Width="180" Height="40" Foreground="#FF469A26" Background="#FFBCD2DC" FontFamily="Segoe UI Black" FontSize="24" Click="Accept_Click" />
            <TextBox x:Name="AccepterName" Height="33" Canvas.Left="190" TextWrapping="Wrap" Text="" Canvas.Top="35" Width="195"/>
            <TextBox x:Name="Summa" Height="33" Canvas.Left="190" TextWrapping="Wrap" Text="" Canvas.Top="110" Width="195"/>

        </Canvas>

    </Grid>
</Window>
